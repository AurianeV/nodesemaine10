// views/LoginView.pug
extends layout

block content
  .container-fluid.mt-5
    .row.justify-content-center
      .col-md-6
        .card
          .card-header Connexion
          .card-body
            form
              .mb-3
                label(for='username', class='form-label') Nom d'utilisateur
                input(type='text', class='form-control', id='username', placeholder='Votre nom d\'utilisateur')
              .mb-3
                label(for='password', class='form-label') Mot de passe
                input(type='password', class='form-control', id='password', placeholder='Votre mot de passe')
              button(type='submit', class='btn btn-primary') Se connecter
